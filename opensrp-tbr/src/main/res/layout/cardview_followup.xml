<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/clientFollowupCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="15dp"
    android:background="@drawable/border"
    android:orientation="vertical"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">

        <org.smartregister.view.customcontrols.CustomFontTextView
            android:id="@+id/followup"
            style="@style/CustomFontTextViewStyle.ClientList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_gravity="center_vertical"
            android:text="@string/followup"
            android:textColor="@color/text_black"
            android:textSize="22sp"
            android:paddingLeft="0dp"/>


        <Button
            android:id="@+id/follow_up_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:adjustViewBounds="true"
            android:background="@drawable/due_vaccine_blue_bg"
            android:gravity="center_vertical"
            android:hapticFeedbackEnabled="true"
            android:inputType="textCapCharacters"
            android:padding="15dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:layout_marginTop="20dp"
            android:text="@string/followup"
            android:textAllCaps="true"
            android:textColor="@color/status_bar_text_almost_white"
            android:textSize="22sp" />
    </LinearLayout>

</LinearLayout>