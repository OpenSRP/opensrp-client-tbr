<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/clientPositiveResultsCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/border"
    android:orientation="vertical"
    android:padding="@dimen/card_padding">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">

            <org.smartregister.view.customcontrols.CustomFontTextView
                style="@style/CustomFontTextViewStyle.ClientList.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_gravity="center_vertical"
                android:text="Positive Results"
                android:textColor="@android:color/black"
                android:textSize="@dimen/activity_header_size" />

            <org.smartregister.view.customcontrols.CustomFontTextView
                android:id="@+id/recordResultsTextView"
                style="@style/CustomFontTextViewStyle.ClientList.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="10dp"
                android:text="RECORD RESULTS"
                android:textAllCaps="true"
                android:textColor="@color/male_dark_blue"
                android:textSize="@dimen/activity_title_size" />
        </RelativeLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/card_content_margin"
        android:orientation="vertical">

        <org.smartregister.view.customcontrols.CustomFontTextView
            android:id="@+id/firstEncounterDateTextView"
            style="@style/CustomFontTextViewStyle.ClientList.Light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/card_content_margin"
            android:text="First encounter: 27 May 2017"
            android:textColor="@color/dark_grey"
            android:textSize="@dimen/activity_title_size" />


        <org.smartregister.view.customcontrols.CustomFontTextView
            android:id="@+id/result_details"
            style="@style/CustomFontTextViewStyle.ClientList.Light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|left"
            android:textColor="#757575"
            android:textSize="@dimen/activity_title_size"
            android:visibility="gone" />


        <org.smartregister.view.customcontrols.CustomFontTextView
            android:id="@+id/noResultsTextView"
            style="@style/CustomFontTextViewStyle.ClientList.Light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/card_content_margin"
            android:text="No results recorded"
            android:textColor="@color/dark_grey"
            android:textSize="@dimen/activity_title_size" />


    </LinearLayout>
</LinearLayout>