<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/clientServiceHistoryCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:layout_marginBottom="5dp"
    android:background="@drawable/border"
    android:orientation="vertical"
    android:padding="10dp">

    <org.smartregister.view.customcontrols.CustomFontTextView
        android:id="@+id/service_history"
        style="@style/CustomFontTextViewStyle.ClientList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="0dp"
        android:text="Service History"
        android:textColor="#000000"
        android:textSize="22sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        android:paddingTop="15dp">

        <org.smartregister.view.customcontrols.CustomFontTextView
            android:id="@+id/date"
            style="@style/CustomFontTextViewStyle.ClientList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="0dp"
            android:text="Date"
            android:textColor="@color/client_list_grey"
            android:textSize="20sp" />

        <View
            android:layout_width="105dp"
            android:layout_height="match_parent" />

        <org.smartregister.view.customcontrols.CustomFontTextView
            android:id="@+id/form"
            style="@style/CustomFontTextViewStyle.ClientList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Form"
            android:textColor="@color/client_list_grey"
            android:textSize="20sp" />
    </LinearLayout>

    <org.smartregister.tbr.view.NonScrollableListView
        android:id="@+id/serviceHistoryListView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:divider="@null"
        android:dividerHeight="0dp" />
</LinearLayout>