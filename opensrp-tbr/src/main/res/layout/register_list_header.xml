<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:id="@+id/patient_header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="1dp"
        android:layout_weight="5"
        android:orientation="horizontal">

        <org.smartregister.view.customcontrols.CustomFontTextView
            android:id="@+id/child_header"
            style="@style/CustomFontTextViewStyle.ClientList.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/child_profile"
            android:textAllCaps="true"
            android:textColor="@color/client_list_grey"
            android:textSize="16sp" />


        <org.smartregister.view.customcontrols.CustomFontTextView
            android:id="@+id/child_age_header"
            style="@style/CustomFontTextViewStyle.ClientList.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="7dp"
            android:text="@string/birthdate_age"
            android:textAllCaps="true"
            android:textColor="@color/client_list_grey"
            android:textSize="16sp" />

    </RelativeLayout>

    <org.smartregister.view.customcontrols.CustomFontTextView
        android:id="@+id/xpert_results_header"
        style="@style/CustomFontTextViewStyle.ClientList.Medium"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_weight="2.6"
        android:gravity="center_horizontal"
        android:text="@string/xpert_result"
        android:textAllCaps="true"
        android:textColor="@color/client_list_grey"
        android:textSize="16sp"
        android:visibility="gone" />

    <org.smartregister.view.customcontrols.CustomFontTextView
        android:id="@+id/smr_results_header"
        style="@style/CustomFontTextViewStyle.ClientList.Medium"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_weight="2.6"
        android:gravity="center_horizontal"
        android:text="@string/smr_results"
        android:textAllCaps="true"
        android:textColor="@color/client_list_grey"
        android:textSize="16sp"
        android:visibility="gone" />

    <org.smartregister.view.customcontrols.CustomFontTextView
        android:id="@+id/anemia_header"
        style="@style/CustomFontTextViewStyle.ClientList.Medium"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_weight="2"
        android:gravity="center_horizontal"
        android:text="@string/anemia"
        android:textAllCaps="true"
        android:textColor="@color/client_list_grey"
        android:textSize="16sp"/>

    <org.smartregister.view.customcontrols.CustomFontTextView
        android:id="@+id/malnutrition_header"
        style="@style/CustomFontTextViewStyle.ClientList.Medium"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_weight="2"
        android:gravity="center_horizontal"
        android:text="@string/malnutrition"
        android:textAllCaps="true"
        android:textColor="@color/client_list_grey"
        android:textSize="16sp"/>

    <org.smartregister.view.customcontrols.CustomFontTextView
        android:id="@+id/cred_header"
        style="@style/CustomFontTextViewStyle.ClientList.Medium"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_weight="2"
        android:gravity="center_horizontal"
        android:text="@string/cred"
        android:textAllCaps="true"
        android:textColor="@color/client_list_grey"
    android:textSize="16sp"/>

    <org.smartregister.view.customcontrols.CustomFontTextView
        android:id="@+id/home_visit_due_header"
        style="@style/CustomFontTextViewStyle.ClientList.Medium"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_weight="3"
        android:gravity="center_horizontal"
        android:text="@string/home_visit_due"
        android:textAllCaps="true"
        android:textColor="@color/client_list_grey"
        android:textSize="16sp"/>
</merge>
