<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/register_columns"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/list_item_height"
    android:background="#eeeeee"
    android:orientation="horizontal"
    android:layout_marginBottom="10dp">

    <include layout="@layout/register_list_row" />

    <LinearLayout
        android:id="@+id/results_column"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginRight="1dp"
        android:layout_weight="3.4"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/result_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="3dp"
            android:gravity="center"
            android:textColor="#757575"
            android:textSize="16sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/button1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="#3269D4"
            android:text="View Digest"
            android:textSize="18sp"
            android:visibility="visible"/>
        <!--<TextView
            android:id="@+id/result_lnk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="3dp"
            android:gravity="center"
            android:text="@string/result"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="#3269D4"
            android:textSize="18sp" />-->

    </LinearLayout>

    <LinearLayout
        android:id="@+id/diagnose_column"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginRight="1dp"
        android:layout_weight="2.6"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_last_visit_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:textAlignment="center"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/diagnose_lnk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:text=""
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="#3269D4"
            android:textSize="18sp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/claim_lnk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:text="@string/claim"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="#3269D4"
            android:textSize="18sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_already_exists"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:enabled="false"
            android:text="@string/already_exists"
            android:textAlignment="center"
            android:textColor="#D3D3D3"
            android:textSize="18sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/encounter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:textAlignment="center"
            android:textColor="#757575"
            android:textSize="16sp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/outcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="#3269D4"
            android:text="Record Outcome"
            android:textSize="18sp"
            android:visibility="visible"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/next_visit_column"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginRight="1dp"
        android:layout_weight="2.6"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:orientation="vertical">

<!--        <TextView
            android:id="@+id/diagnose_lnk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:text="@string/diagnose"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="#3269D4"
            android:textSize="18sp" />-->

        <TextView
            android:id="@+id/tv_next_visit_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textColor="#757575"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/child_followup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:text="Follow up"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="#3269D4"
            android:textSize="18sp" />
    </LinearLayout>


</LinearLayout>
